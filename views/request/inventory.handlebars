
<div class="dashboard">
   {{>_nav}}
   <header class="header">
       <h3>Estoque</h3>
   </header>
    <main class="main">
            
      <div class="container-inventory">
          <h4>Cadastro de Produto</h4>
          
        <form action="/registerProduct" method="post" class="form-inventory">
       
        <div class="inventory-formation code">
            <label for="code">#Código</label>
            <input type="text" name="code" id="code" class="input-inventory" pattern="[0-9]{}" inputmode="numeric" required>
        </div>
        <div class="inventory-formation product">
            <label for="">Produto</label>
            <input type="text" name="name" id="product" class="input-inventory" pattern="[Aa-Zz]{}" required>
        </div>
        <div class="inventory-formation unit">
            <label for="unidade">Unidade</label>
            <input type="number" name="unit" id="unit" class="input-inventory" pattern="[0-9]{}" required>
        </div>
        <div class="inventory-formation price">
            <label for="price">Preço</label>
            <input type="number" name="price" id="price" class="input-inventory" step="0.00" required>
            
        </div>
        <div class="btn-inventory ">
                <p></p>
                <button type="submit" class="btn-confirm-delete"><svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="#0fe71a" class="bi bi-check-circle-fill btn-inventory" viewBox="0 0 16 16">
                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                </svg></button>
        </div>
        <div class="btn-inventory ">
                <p></p>
                <button type="reset" class="btn-confirm-delete">
                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="#f50909" class="bi bi-x-circle-fill btn-inventory" viewBox="0 0 16 16">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z"/>
                    </svg>
                </button>
        </div>
        </form>
            {{#each errors}}
                    <div class="err-product"> {{failregister}} </div>
            {{else}}

            {{/each}}
        {{>_msg}}
        
    <div class="table-container">
        
        <table class="table-client table-inventory" id="table">
            <tbody>               
                <tr class="table-rows">                    
                    <td class="title-table data">#Código</td>
                    <td class="title-table">Produto</td>
                    <td class="title-table">Unidade</td>
                    <td class="title-table">Preço</td>
                    <td class="title-table">Excluir</td>

                </tr>
            
            {{#each product}}
            
                <tr class="table-row">
                    
                    <td class="body-table table-color-grey data" >{{code}}</td>

                    <td class="body-table table-color-whitesmoke" >{{name}}</td>

                    <td class="body-table table-color-whitesmoke">{{unit}}</td>

                    <td class="body-table table-color-whitesmoke">{{price}}</td>

                    <td class="body-table table-color-whitesmoke"><a href="/deleteProduct/{{_id}}" class="table-link" ><button
                                class="table-btn"><img src="./img/icon-lixo.png" class="icon-btn" alt=""> </button></a></td>
                </tr>
                </tbody>
 
            </div>

            {{/each}}
        </table>
    </div>
</div> 
    </main>
</div>